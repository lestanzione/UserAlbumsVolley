<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/userCardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userNameTextView"
            android:text="User Name"
			android:textSize="18sp"
			android:alpha="0.87"
            android:layout_marginTop="8dp"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"/>
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/userCityTextView"
			android:text="User City"
			android:textSize="14sp"
			android:alpha="0.54"
			android:layout_below="@+id/userNameTextView"
			android:layout_marginTop="2dp"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"/>
		
		<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userProfileButton"
            android:text="Profile"
			android:textColor="@color/white"
			android:textSize="12sp"
			android:background="@drawable/button_user"
			android:minHeight="0dp"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:layout_below="@id/userCityTextView"
            android:layout_marginTop="16dp"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"/>
			
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userAlbumsButton"
            android:text="Albums"
			android:textColor="@color/white"
			android:textSize="12sp"
			android:background="@drawable/button_user"
			android:minHeight="0dp"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
            android:layout_below="@id/userCityTextView"
			android:layout_toRightOf="@id/userProfileButton"
            android:layout_marginTop="16dp"
			android:layout_marginLeft="8dp"
			android:layout_marginStart="8dp"/>
		
		<ImageView
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:id="@+id/userImageView"
			android:background="@android:color/darker_gray"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:layout_margin="8dp"/>
		
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/colorPrimary"
			android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>
